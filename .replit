modules = ["nodejs-22", "svelte-kit-node-20"]
hidden = [".config", "package-lock.json"]
run = "pnpm dev --host"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "nodejs"

[deployment]
run = ["sh", "-c", "npm run dev"]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 4173
externalPort = 8080
exposeLocalhost = true

[[ports]]
localPort = 5173
externalPort = 80

[workflows]

[[workflows.workflow]]
name = "dev"
mode = "sequential"
author = 39341409

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm dev --host"

[[workflows.workflow]]
name = "build"
mode = "sequential"
author = 39341409

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm build"

[[workflows.workflow]]
name = "preview"
mode = "sequential"
author = 39341409

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm preview"
